<tr class="align-middle">
  <td><%= link_to friend.first_name + " " + friend.last_name, friend, class: "link-dark text-decoration-none" %></td>
  <td><%= friend.email %></td>
  <td><%= friend.phone %></td>
  <td><%= friend.twitter %></td>
  <td><%= button_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm" %></td>
</tr>