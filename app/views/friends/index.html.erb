<% if user_signed_in? %>
  <table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <%= render friend %>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>

<div class="row">
  <div class="col text-container">
    <h1 class="text-center">Welcome to Friends List!</h1>
    <p>Friends List is an application that helps you keep track of your friends & their contact information! To start using this app, simply sign up for an account and start adding friends to your list.</p>
    <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<% end %>